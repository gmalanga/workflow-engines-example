{
    "components": [
        {
            "type": "textfield",
            "key": "locationName",
            "label": "Location Name",
            "placeholder": "Enter the location name.",
            "input": true,
            "validate": {
                "required": true
            },
            "tableView": true
        },
        {
            "type": "textfield",
            "key": "postcode",
            "label": "PostCode",
            "placeholder": "Enter the postcode",
            "input": true,
            "validate": {
                "required": true
            },
            "tableView": true
        },
        {
            "type": "select",
            "key": "region",
            "label": "Region",
            "placeholder": "Select the region",
            "template": "{{ item.label }}",
            "multiple": true,
            "input": true,
            "data": {
                "values": [
                    {
                        "label": "England",
                        "value": "england"
                    },
                    {
                        "label": "Wales",
                        "value": "wales"
                    },
                    {
                        "label": "Scotland",
                        "value": "scotland"
                    },
                    {
                        "label": "Northen Ireland",
                        "value": "northenIreland"
                    }
                ]
            },
            "tableView": true
        },
        {
            "type": "address",
            "key": "address1",
            "label": "Address 1",
            "placeholder": "Enter your address",
            "input": true,
            "map": {
                "region": "",
                "key": ""
            },
            "tableView": false,
            "components": [
                {
                    "label": "Address 1",
                    "tableView": false,
                    "key": "address1",
                    "type": "textfield",
                    "input": true,
                    "customConditional": "show = _.get(instance, 'parent.manualMode', false);"
                },
                {
                    "label": "Address 2",
                    "tableView": false,
                    "key": "address2",
                    "type": "textfield",
                    "input": true,
                    "customConditional": "show = _.get(instance, 'parent.manualMode', false);"
                },
                {
                    "label": "City",
                    "tableView": false,
                    "key": "city",
                    "type": "textfield",
                    "input": true,
                    "customConditional": "show = _.get(instance, 'parent.manualMode', false);"
                },
                {
                    "label": "State",
                    "tableView": false,
                    "key": "state",
                    "type": "textfield",
                    "input": true,
                    "customConditional": "show = _.get(instance, 'parent.manualMode', false);"
                },
                {
                    "label": "Country",
                    "tableView": false,
                    "key": "country",
                    "type": "textfield",
                    "input": true,
                    "customConditional": "show = _.get(instance, 'parent.manualMode', false);"
                },
                {
                    "label": "Zip Code",
                    "tableView": false,
                    "key": "zip",
                    "type": "textfield",
                    "input": true,
                    "customConditional": "show = _.get(instance, 'parent.manualMode', false);"
                }
            ]
        },
        {
            "type": "address",
            "key": "address2",
            "label": "Address 2",
            "placeholder": "Enter your address",
            "input": true,
            "map": {
                "region": "",
                "key": ""
            },
            "tableView": false,
            "components": [
                {
                    "label": "Address 1",
                    "tableView": false,
                    "key": "address1",
                    "type": "textfield",
                    "input": true,
                    "customConditional": "show = _.get(instance, 'parent.manualMode', false);"
                },
                {
                    "label": "Address 2",
                    "tableView": false,
                    "key": "address2",
                    "type": "textfield",
                    "input": true,
                    "customConditional": "show = _.get(instance, 'parent.manualMode', false);"
                },
                {
                    "label": "City",
                    "tableView": false,
                    "key": "city",
                    "type": "textfield",
                    "input": true,
                    "customConditional": "show = _.get(instance, 'parent.manualMode', false);"
                },
                {
                    "label": "State",
                    "tableView": false,
                    "key": "state",
                    "type": "textfield",
                    "input": true,
                    "customConditional": "show = _.get(instance, 'parent.manualMode', false);"
                },
                {
                    "label": "Country",
                    "tableView": false,
                    "key": "country",
                    "type": "textfield",
                    "input": true,
                    "customConditional": "show = _.get(instance, 'parent.manualMode', false);"
                },
                {
                    "label": "Zip Code",
                    "tableView": false,
                    "key": "zip",
                    "type": "textfield",
                    "input": true,
                    "customConditional": "show = _.get(instance, 'parent.manualMode', false);"
                }
            ]
        },
        {
            "type": "email",
            "key": "email",
            "label": "Email",
            "placeholder": "Enter your email",
            "input": true,
            "validateOn": "blur",
            "tableView": true
        },
        {
            "type": "datetime",
            "key": "openDate",
            "label": "Open Date",
            "placeholder": "Enter Open Date",
            "format": "yyyy-MM-dd hh:mm a\"",
            "input": true,
            "tooltip": "Enter date the item is due",
            "description": "Enter Due Date",
            "validate": {
                "required": true
            },
            "tableView": false,
            "widget": {
                "type": "calendar",
                "displayInTimezone": "viewer",
                "locale": "en",
                "useLocaleSettings": false,
                "allowInput": true,
                "mode": "single",
                "enableTime": true,
                "noCalendar": false,
                "format": "yyyy-MM-dd hh:mm a\"",
                "hourIncrement": 1,
                "minuteIncrement": 1,
                "time_24hr": false,
                "minDate": null,
                "maxDate": null
            }
        },
        {
            "type": "button",
            "action": "reset",
            "label": "Reset Form",
            "theme": "success",
            "input": true,
            "key": "submit",
            "tableView": false
        },
        {
            "type": "button",
            "label": "Submit",
            "key": "submitForm",
            "disableOnInvalid": true,
            "input": true,
            "tableView": false
        }
    ]
}